{
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[dockercompose]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[dotenv]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.singleQuote": true,
        "prettier.tabWidth": 2
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[spring-boot-properties]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[terraform-vars]": {
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.singleQuote": true,
        "prettier.tabWidth": 2
    },
    "[xml]": {
        "editor.defaultFormatter": "DotJoshJohnson.xml"
    },
    "cSpell.allowCompoundWords": true,
    "cSpell.ignorePaths": [
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "devcontainer.json",
        "node_modules",
        "package-lock.json",
        "settings.json",
        "vscode-extension"
    ],
    "cSpell.userWords": [
        "awslogs",
        "awsvpc",
        "Buildx",
        "chdir",
        "creds",
        "ecrdkr",
        "intellicode",
        "jsonencode",
        "liveshare",
        "mvnw",
        "nestjs",
        "outfile",
        "rcon",
        "sdkman",
        "seacret",
        "Servlet",
        "shiftjis",
        "tfvars"
    ],
    "debug.console.fontFamily": "PlemolJP",
    "dev.containers.executeInWSL": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.dragAndDrop": false,
    "editor.fontFamily": "PlemolJP",
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.minimap.showSlider": "always",
    "editor.mouseWheelZoom": true,
    "editor.stickyScroll.enabled": false,
    "editor.wordWrap": "on",
    "explorer.compactFolders": true,
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": true,
    "files.autoGuessEncoding": true,
    "files.candidateGuessEncodings": ["shiftjis", "utf8"],
    "files.exclude": {
        "**/.gitignore": false,
        "**/.gitkeep": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",
    "git.pruneOnFetch": true,
    "hediet.vscode-drawio.resizeImages": null,
    "java.compile.nullAnalysis.mode": "disabled",
    "java.configuration.updateBuildConfiguration": "interactive",
    "java.debug.settings.showHex": false,
    "java.debug.settings.showQualifiedNames": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "liveServer.settings.ChromeDebuggingAttachment": true,
    "liveServer.settings.useLocalIp": true,
    "liveshare.allowGuestDebugControl": true,
    "liveshare.allowGuestTaskControl": true,
    "liveshare.diagnosticLogging": true,
    "liveshare.launcherClient": "visualStudioCode",
    "liveshare.publishWorkspaceInfo": true,
    "liveshare.showInStatusBar": "whileCollaborating",
    "markdownlint.config": {
        "default": true,
        "MD007": {
            "indent": 4
        }
    },
    "prettier.bracketSameLine": false,
    "prettier.bracketSpacing": true,
    "prettier.documentSelectors": ["**/*.{txt,tmp}"],
    "prettier.htmlWhitespaceSensitivity": "css",
    "prettier.proseWrap": "always",
    "prettier.quoteProps": "as-needed",
    "prettier.semi": true,
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.trailingComma": "all",
    "prettier.useTabs": false,
    "remote.autoForwardPortsSource": "hybrid",
    "scm.alwaysShowRepositories": true,
    "scm.defaultViewMode": "tree",
    "scm.inputFontFamily": "editor",
    "security.allowedUNCHosts": ["wsl.localhost"],
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "spring-boot.ls.problem.application-properties.PROP_UNKNOWN_PROPERTY": "IGNORE",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.enableVisualBell": true,
    "terminal.integrated.fontFamily": "'PlemolJP Console NF'",
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.suggest.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "start",
    "workbench.colorTheme": "Dracula Theme",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.enablePreview": true,
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.tree.enableStickyScroll": false
}
